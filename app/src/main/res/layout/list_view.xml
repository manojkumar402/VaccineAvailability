<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="3dp"
    app:cardCornerRadius="3dp"
    app:cardElevation="3dp"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="10dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:weightSum="3">

                <TextView
                    android:id="@+id/idTVCenterName"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_margin="3dp"
                    android:layout_weight="2"
                    android:padding="3dp"
                    android:text="Center Name"
                    android:textSize="18sp"
                    android:textStyle="bold" />

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_margin="3dp"
                    android:layout_weight="1"
                    android:padding="1dp"
                    android:text="Available Doses"
                    android:textAlignment="viewEnd"
                    android:textSize="16sp" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/idTVCenterName"
                android:orientation="horizontal"
                >

                <!--text view for displaying vaccine name-->
                <TextView
                    android:layout_weight="0.9"
                    android:id="@+id/idTVVaccineName"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_margin="3dp"
                    android:drawablePadding="4dp"
                    android:padding="3dp"
                    android:text="Vaccine Name"
                    android:textColor="@color/black" />


                <TextView
                    android:id="@+id/idTVAvaliablity"
                    android:padding="4dp"
                    android:layout_weight="0.11"
                    android:layout_width="20dp"
                    android:layout_height="wrap_content"
                    android:layout_margin="3dp"
                    android:textAlignment="center"
                    android:background="@drawable/myshape1"
                    android:text="99"
                    android:textColor="@color/black"
                    android:textSize="16dp" />

            </LinearLayout>


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/idTVCenterName"
                android:orientation="horizontal">

                <!--text view for displaying vaccine name-->
                <TextView
                    android:id="@+id/idTVFeeType"
                    android:layout_width="50dp"
                    android:layout_height="wrap_content"
                    android:layout_margin="3dp"
                    android:drawablePadding="4dp"
                    android:background="@drawable/myshape"
                    android:padding="3dp"
                    android:textAlignment="center"
                    android:text="FEES" />

                <!--text view for displaying center fees type-->
                <TextView
                    android:id="@+id/idTVAgeLimit"
                    android:layout_width="40dp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_margin="3dp"
                    android:padding="3dp"
                    android:background="@drawable/myshape3"
                    android:text="age"
                    android:textAlignment="center"
                    android:textColor="@color/black" />

                <TextView
                    android:id="@+id/bookNow"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_margin="3dp"
                    android:layout_weight="1.8"
                    android:padding="3dp"
                    android:text="BOOK NOW"
                    android:textStyle="bold"
                    android:textAlignment="viewEnd"
                    android:textColor="@color/red" />

            </LinearLayout>

        </LinearLayout>
    </RelativeLayout>


</androidx.cardview.widget.CardView>